import java.util.Scanner;

public class DifferentTypesOfInput {

    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);

        // Asks user to input several data types and stores inputs as variables in program memory
        System.out.println("Give a string:");
        String string = scan.nextLine();
        System.out.println("Give an integer:");
        Integer integer = Integer.valueOf(scan.nextLine());
        System.out.println("Give a double:");
        Double number = Double.valueOf(scan.nextLine());
        System.out.println("Give a boolean:");
        Boolean bool = Boolean.valueOf(scan.nextLine());

        // Outputs the user's inputs using concatenation 
        System.out.println("You gave the string " + string);
        System.out.println("You gave the integer " + integer);
        System.out.println("You gave the double " + number);
        System.out.println("You gave the boolean "+ bool);
    }
}